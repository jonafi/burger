<div class="container">

  <div class="text-center">
    <img class="burger-icon" src="/assets/img/burger.png" />
  </div>

  <hr />

  <div class="row">
    <div class="col-sm-6">
      <h3 class="heading">Redy to eat</h3>
      <ol>
        {{#each burger}}
        <li class="menu-item">{{burger_name}} <button type="button" class="btn btn-outline-success">EAT!</button></li>
        {{/each}}
      </ol>
    </div>
    <div class="col-sm-6">
      <h3 class="heading">DEVOURED!</h3>
    </div>
  </div>

  <hr />

  <div class="text-center">
    <form class="create-form">
      <div class="form-group">
        <textarea placeholder="Add a burger" type="text" id="newBurger" name="name"></textarea>
      </div>
      <button type="submit">COOK IT!</button>
    </form>
  </div>

</div>